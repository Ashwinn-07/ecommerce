<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard - Sales Report</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <style>
    body {
      font-family: Arial, sans-serif;
      line-height: 1.6;
      color: #333;
    }

    .content-main {
      margin-left: 0;
      padding: 20px;
      transition: margin-left 0.3s ease-in-out;
    }

    .card {
      margin-bottom: 20px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .card-title {
      font-size: 1.1rem;
      font-weight: bold;
      margin-bottom: 10px;
    }

    .chart-container {
      position: relative;
      height: 300px;
      width: 100%;
    }

    .chart-container img {
      max-width: 100%;
      height: auto;
    }

    .form-select,
    .form-control {
      max-width: 200px;
    }

    .list-group-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px 15px;
    }

    @media (min-width: 768px) {
      .content-main {
        margin-left: 250px !important;
      }

      .card-title {
        font-size: 1.2rem;
      }

      .chart-container {
        height: 400px;
      }
    }

    @media (min-width: 992px) {
      .content-main {
        margin-left: 300px !important;
      }

      .card-title {
        font-size: 1.3rem;
      }
    }

    .row {
      display: flex;
      flex-wrap: wrap;
      margin-right: -15px;
      margin-left: -15px;
    }

    .col-lg-3,
    .col-lg-4 {
      flex: 0 0 100%;
      max-width: 100%;
      padding-right: 15px;
      padding-left: 15px;
    }

    @media (min-width: 768px) {
      .col-lg-3 {
        flex: 0 0 50%;
        max-width: 50%;
      }

      .col-lg-4 {
        flex: 0 0 50%;
        max-width: 50%;
      }
    }

    @media (min-width: 992px) {
      .col-lg-3 {
        flex: 0 0 25%;
        max-width: 25%;
      }

      .col-lg-4 {
        flex: 0 0 33.333333%;
        max-width: 33.333333%;
      }
    }

    @media (max-width: 767px) {
      .content-header {
        text-align: center;
      }

      .form-select,
      .form-control {
        max-width: 100%;
      }

      #customDateRange input {
        margin-bottom: 10px;
      }

      .btn {
        width: 100%;
        margin-bottom: 10px;
      }
    }

    img {
      max-width: 100%;
      height: auto;
    }
  </style>
  <body>
    <%- include("../../views/partials/admin/header") %>
    <section class="content-main">
      <div class="content-header">
        <div>
          <h2 class="content-title card-title">Dashboard</h2>
        </div>
      </div>
      <div class="row mb-4">
        <div class="col-lg-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Total Sales</h5>
              <h2 class="mt-2 mb-0">$<%= totalSales %></h2>
            </div>
          </div>
        </div>
        <div class="col-lg-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Total Orders</h5>
              <h2 class="mt-2 mb-0"><%= totalOrders %></h2>
            </div>
          </div>
        </div>
        <div class="col-lg-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Total Customers</h5>
              <h2 class="mt-2 mb-0"><%= totalCustomers %></h2>
            </div>
          </div>
        </div>
      </div>

      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Sales Overview</h5>
          <div class="row g-3 align-items-center mb-3">
            <div class="col-auto">
              <select
                class="form-select"
                id="chartPeriod"
                onchange="switchChart()"
              >
                <option value="yearly">Yearly</option>
                <option value="monthly">Monthly</option>
                <option value="weekly">Weekly</option>
              </select>
            </div>
          </div>
          <div class="chart-container">
            <img
              id="yearlyChart"
              src="<%= yearlyChartImage %>"
              alt="Yearly Sales Chart"
              style="display: block; max-width: 100%; height: auto"
            />
            <img
              id="monthlyChart"
              src="<%= monthlyChartImage %>"
              alt="Monthly Sales Chart"
              style="display: none; max-width: 100%; height: auto"
            />
            <img
              id="weeklyChart"
              src="<%= weeklyChartImage %>"
              alt="Weekly Sales Chart"
              style="display: none; max-width: 100%; height: auto"
            />
          </div>
        </div>
      </div>

      <div class="row mb-4">
        <div class="col-lg-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Best Selling Products (Top 10)</h5>
              <ul class="list-group list-group-flush">
                <% topProducts.forEach(product => { %>
                <li
                  class="list-group-item d-flex justify-content-between align-items-center"
                >
                  <span><%= product.name %></span>
                  <span class="badge bg-primary rounded-pill ms-auto"
                    ><%= product.sales %></span
                  >
                </li>
                <% }) %>
              </ul>
            </div>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Best Selling Categories (Top 10)</h5>
              <ul class="list-group list-group-flush">
                <% topCategories.forEach(category => { %>
                <li
                  class="list-group-item d-flex justify-content-between align-items-center"
                >
                  <span><%= category.name %></span>
                  <span class="badge bg-primary rounded-pill ms-auto"
                    ><%= category.sales %></span
                  >
                </li>
                <% }) %>
              </ul>
            </div>
          </div>
        </div>
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Best Selling Brands (Top 10)</h5>
              <ul class="list-group list-group-flush">
                <% topBrands.forEach(brand => { %>
                <li
                  class="list-group-item d-flex justify-content-between align-items-center"
                >
                  <span><%= brand.name %></span>
                  <span class="badge bg-primary rounded-pill ms-auto"
                    ><%= brand.sales %></span
                  >
                </li>
                <% }) %>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Sales Report</h5>
          <form action="/admin/generate-sales-report" method="POST">
            <div class="row g-3 align-items-center mb-3">
              <div class="col-auto">
                <label for="reportType" class="col-form-label"
                  >Report Type:</label
                >
              </div>
              <div class="col-auto">
                <select
                  class="form-select"
                  id="reportType"
                  name="reportType"
                  onchange="toggleCustomDateRange()"
                >
                  <option value="daily">Daily</option>
                  <option value="weekly">Weekly</option>
                  <option value="monthly">Monthly</option>
                  <option value="yearly">Yearly</option>
                  <option value="custom">Custom Date Range</option>
                </select>
              </div>
              <div class="col-auto" id="customDateRange" style="display: none">
                <input
                  type="date"
                  class="form-control"
                  id="startDate"
                  name="startDate"
                />
                <input
                  type="date"
                  class="form-control mt-2"
                  id="endDate"
                  name="endDate"
                />
              </div>
              <div class="col-auto">
                <button type="submit" class="btn btn-primary">
                  Generate Report
                </button>
              </div>
            </div>
          </form>

          <% if (locals.reportData) { %>
          <div id="reportResults">
            <h6>Order Details</h6>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Order ID</th>
                  <th>User ID</th>
                  <th>Ordered Items</th>
                  <th>Total Price</th>
                  <th>Final Amount</th>
                  <th>Discount</th>
                  <th>Status</th>
                  <th>Payment Method</th>
                  <th>Created On</th>
                </tr>
              </thead>
              <tbody>
                <% reportData.forEach(order => { %>
                <tr>
                  <td><%= order.orderId %></td>
                  <td><%= order.userId %></td>
                  <td>
                    <% order.orderedItems.forEach(item => { %> <%= item.product
                    %> x <%= item.quantity %> <% }); %>
                  </td>
                  <td>$<%= order.totalPrice %></td>
                  <td>$<%= order.finalAmount %></td>
                  <td>$<%= order.discount %></td>
                  <td><%= order.status %></td>
                  <td><%= order.paymentMethod %></td>
                  <td><%= order.createdOn %></td>
                </tr>
                <% }); %>
              </tbody>
            </table>

            <div class="mt-3">
              <a
                href="/admin/download-report?type=pdf"
                class="btn btn-secondary"
                >Download PDF</a
              >
              <a
                href="/admin/download-report?type=excel"
                class="btn btn-secondary"
                >Download Excel</a
              >
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </section>
    <%- include("../../views/partials/admin/footer") %>

    <script>
      function toggleCustomDateRange() {
        const reportType = document.getElementById("reportType").value;
        const customDateRange = document.getElementById("customDateRange");
        customDateRange.style.display =
          reportType === "custom" ? "block" : "none";
      }
      function switchChart() {
        const period = document.getElementById("chartPeriod").value;

        document.getElementById("yearlyChart").style.display =
          period === "yearly" ? "block" : "none";

        document.getElementById("monthlyChart").style.display =
          period === "monthly" ? "block" : "none";

        document.getElementById("weeklyChart").style.display =
          period === "weekly" ? "block" : "none";
      }
    </script>
  </body>
</html>
