<%-include("../../views/partials/user/header") %>
<style>
  body {
    font-family: "Arial", sans-serif;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    background-color: #f9f9f9;
  }

  .container {
    width: 90%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 15px;
  }

  .breadcrumb-option {
    background-color: #f3f2ee;
    padding: 20px 0;
  }

  .breadcrumb__text h4 {
    color: #111111;
    font-weight: 700;
    margin-bottom: 8px;
    font-size: 24px;
  }

  .breadcrumb__links a,
  .breadcrumb__links span {
    font-size: 14px;
    color: #111111;
    margin-right: 10px;
    display: inline-block;
    position: relative;
  }

  .breadcrumb__links span {
    color: #b7b7b7;
  }

  .breadcrumb__links a:after {
    position: absolute;
    right: -8px;
    top: 0;
    content: "/";
    color: #888888;
  }

  .account-section {
    padding: 30px 0;
    background-color: #fff;
  }

  .account-wrapper {
    display: flex;
    flex-direction: column;
  }

  .account-sidebar {
    width: 100%;
    margin-bottom: 30px;
  }

  .account-sidebar ul {
    list-style: none;
    padding: 0;
    border: 1px solid #ddd;
    background-color: #f5f5f5;
  }

  .account-sidebar ul li a {
    display: block;
    padding: 12px 15px;
    color: #333;
    text-decoration: none;
    border-bottom: 1px solid #ddd;
    font-size: 14px;
  }

  .account-sidebar ul li a:hover {
    background-color: #f0f0f0;
    color: #000;
  }

  .account-sidebar .logout {
    color: red;
  }

  .account-content {
    width: 100%;
  }

  .account-content h2 {
    font-size: 24px;
    margin-bottom: 20px;
  }

  .wallet-balance {
    font-size: 20px;
    font-weight: bold;
    margin-bottom: 20px;
  }

  .transaction-list {
    list-style: none;
    padding: 0;
  }

  .transaction-item {
    border: 1px solid #ddd;
    margin-bottom: 10px;
    padding: 10px;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    font-size: 14px;
  }

  .transaction-type {
    font-weight: bold;
    width: 100%;
    margin-bottom: 5px;
  }

  .transaction-amount {
    font-weight: bold;
  }

  .credit {
    color: green;
  }

  .debit {
    color: red;
  }

  @media (min-width: 768px) {
    .account-wrapper {
      flex-direction: row;
      justify-content: space-between;
    }

    .account-sidebar {
      width: 30%;
      margin-bottom: 0;
    }

    .account-content {
      width: 65%;
    }

    .breadcrumb__text h4 {
      font-size: 28px;
    }

    .breadcrumb__links a,
    .breadcrumb__links span {
      font-size: 15px;
    }

    .account-content h2 {
      font-size: 26px;
    }

    .wallet-balance {
      font-size: 22px;
    }

    .transaction-item {
      font-size: 15px;
    }

    .transaction-type {
      width: auto;
      margin-bottom: 0;
    }
  }

  @media (min-width: 1024px) {
    .container {
      width: 80%;
    }

    .account-sidebar {
      width: 25%;
    }

    .account-content {
      width: 70%;
    }

    .account-content h2 {
      font-size: 28px;
    }

    .wallet-balance {
      font-size: 24px;
    }

    .transaction-item {
      font-size: 16px;
    }
  }
</style>
<section class="breadcrumb-option">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb__text">
          <h4>My Account</h4>
          <div class="breadcrumb__links">
            <a href="/">Home</a>
            <span>My Wallet</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="account-section">
  <div class="container">
    <div class="account-wrapper">
      <aside class="account-sidebar">
        <ul>
          <li><a href="/profile">Account Details</a></li>
          <li><a href="/orders">My Orders</a></li>
          <li><a href="/addresses">My Addresses</a></li>
          <li><a href="/change-password">Change Password</a></li>
          <li><a href="/wallet">Wallet</a></li>
          <li><a href="/logout" class="logout">Log Out</a></li>
        </ul>
      </aside>

      <div class="account-content">
        <h2>My Wallet</h2>
        <div class="wallet-balance">
          Current Balance: $<%= wallet.balance.toFixed(2) %>
        </div>
        <h3>Transaction History</h3>
        <ul class="transaction-list">
          <% wallet.transactions.reverse().forEach(transaction => { %>
          <li class="transaction-item">
            <span
              class="transaction-type <%= transaction.type.toLowerCase() %>"
            >
              <%= transaction.type %>
            </span>
            <span><%= transaction.description %></span>
            <span
              class="transaction-amount <%= transaction.type.toLowerCase() %>"
            >
              <%= transaction.type === 'CREDIT' ? '+' : '-' %>$<%=
              transaction.amount.toFixed(2) %>
            </span>
            <span><%= transaction.date.toLocaleDateString() %></span>
          </li>
          <% }) %>
        </ul>
      </div>
    </div>
  </div>
</section>
<%-include("../../views/partials/user/footer") %>
