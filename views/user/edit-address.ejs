<%-include("../../views/partials/user/header") %>
<style>
  body {
    font-family: "Arial", sans-serif;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    background-color: #f9f9f9;
  }

  .container {
    width: 90%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 15px;
  }

  .breadcrumb-option {
    background-color: #f3f2ee;
    padding: 20px 0;
  }

  .breadcrumb__text h4 {
    color: #111111;
    font-weight: 700;
    margin-bottom: 8px;
    font-size: 24px;
  }

  .breadcrumb__links a,
  .breadcrumb__links span {
    font-size: 14px;
    color: #111111;
    margin-right: 10px;
    display: inline-block;
    position: relative;
  }

  .breadcrumb__links span {
    color: #b7b7b7;
  }

  .breadcrumb__links a:after {
    position: absolute;
    right: -8px;
    top: 0;
    content: "/";
    color: #888888;
  }

  .account-section {
    padding: 30px 0;
    background-color: #fff;
  }

  .account-wrapper {
    display: flex;
    flex-direction: column;
  }

  .account-sidebar {
    width: 100%;
    margin-bottom: 30px;
  }

  .account-sidebar ul {
    list-style: none;
    padding: 0;
    border: 1px solid #ddd;
    background-color: #f5f5f5;
  }

  .account-sidebar ul li a {
    display: block;
    padding: 12px 15px;
    color: #333;
    text-decoration: none;
    border-bottom: 1px solid #ddd;
    font-size: 14px;
  }

  .account-sidebar ul li a:hover {
    background-color: #f0f0f0;
    color: #000;
  }

  .account-sidebar .logout {
    color: red;
  }

  .account-content {
    width: 100%;
  }

  .account-content h2 {
    font-size: 24px;
    margin-bottom: 20px;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-group label {
    display: block;
    margin-bottom: 5px;
    font-size: 14px;
  }

  .form-group input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ddd;
    font-size: 14px;
  }

  .submit-btn {
    display: inline-block;
    padding: 10px 20px;
    background-color: #000;
    color: #fff;
    text-decoration: none;
    border: none;
    cursor: pointer;
    font-size: 14px;
  }

  .error-message {
    color: red;
    display: none;
    font-size: 12px;
    margin-top: 5px;
  }

  @media (min-width: 768px) {
    .account-wrapper {
      flex-direction: row;
      justify-content: space-between;
    }

    .account-sidebar {
      width: 30%;
      margin-bottom: 0;
    }

    .account-content {
      width: 65%;
    }

    .breadcrumb__text h4 {
      font-size: 28px;
    }

    .breadcrumb__links a,
    .breadcrumb__links span {
      font-size: 15px;
    }

    .account-content h2 {
      font-size: 26px;
    }

    .form-group label {
      font-size: 15px;
    }

    .form-group input {
      font-size: 15px;
    }

    .submit-btn {
      font-size: 15px;
    }

    .error-message {
      font-size: 13px;
    }
  }

  @media (min-width: 1024px) {
    .container {
      width: 80%;
    }

    .account-sidebar {
      width: 25%;
    }

    .account-content {
      width: 70%;
    }

    .account-content h2 {
      font-size: 28px;
    }

    .form-group label {
      font-size: 16px;
    }

    .form-group input {
      font-size: 16px;
    }

    .submit-btn {
      font-size: 16px;
    }

    .error-message {
      font-size: 14px;
    }
  }
</style>
<section class="breadcrumb-option">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb__text">
          <h4>My Account</h4>
          <div class="breadcrumb__links">
            <a href="/">Home</a>
            <span>Edit Address</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="account-section">
  <div class="container">
    <div class="account-wrapper">
      <aside class="account-sidebar">
        <ul>
          <li><a href="/profile">Account Details</a></li>
          <li><a href="/orders">My Orders</a></li>
          <li><a href="/addresses">My Addresses</a></li>
          <li><a href="/change-password">Change Password</a></li>
          <li><a href="/wallet">Wallet</a></li>
          <li><a href="/logout" class="logout">Log Out</a></li>
        </ul>
      </aside>

      <div class="account-content">
        <h2>Edit Address</h2>
        <form action="/address/edit/<%= address._id %>" method="POST">
          <div class="form-group">
            <label for="addressType">Address Type:</label>
            <input
              type="text"
              id="addressType"
              name="addressType"
              value="<%= address.addressType %>"
            />
            <div class="error-message" id="addressTypeError">
              Address Type is required
            </div>
          </div>
          <div class="form-group">
            <label for="name">Name:</label>
            <input
              type="text"
              id="name"
              name="name"
              value="<%= address.name %>"
            />
            <div class="error-message" id="nameError">Name is required</div>
          </div>
          <div class="form-group">
            <label for="city">City:</label>
            <input
              type="text"
              id="city"
              name="city"
              value="<%= address.city %>"
            />
            <div class="error-message" id="cityError">City is required</div>
          </div>
          <div class="form-group">
            <label for="state">State:</label>
            <input
              type="text"
              id="state"
              name="state"
              value="<%= address.state %>"
            />
            <div class="error-message" id="stateError">State is required</div>
          </div>
          <div class="form-group">
            <label for="pincode">Pin Code:</label>
            <input
              type="text"
              id="pincode"
              name="pincode"
              value="<%= address.pincode %>"
              pattern="^[1-9][0-9]{5}$"
              title="Please enter a valid 6-digit pin code"
            />
            <div class="error-message" id="pincodeError">
              Pin Code is required (6 digits)
            </div>
          </div>
          <div class="form-group">
            <label for="phone">Phone:</label>
            <input
              type="text"
              id="phone"
              name="phone"
              value="<%= address.phone %>"
              pattern="^[0-9]{10}$"
              title="Please enter a valid 10-digit phone number"
            />
            <div class="error-message" id="phoneError">
              Phone number is required (10 digits)
            </div>
          </div>
          <button type="submit" class="submit-btn">Save Changes</button>
        </form>
      </div>
    </div>
  </div>
</section>

<%-include("../../views/partials/user/footer") %>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const form = document.querySelector("form");
    const addressTypeInput = document.getElementById("addressType");
    const nameInput = document.getElementById("name");
    const cityInput = document.getElementById("city");
    const stateInput = document.getElementById("state");
    const pincodeInput = document.getElementById("pincode");
    const phoneInput = document.getElementById("phone");

    const showError = (input, message) => {
      const errorElement = document.getElementById(`${input.id}Error`);
      if (errorElement) {
        errorElement.innerText = message;
        errorElement.style.display = "block";
      }
    };

    const clearError = (input) => {
      const errorElement = document.getElementById(`${input.id}Error`);
      if (errorElement) {
        errorElement.innerText = "";
        errorElement.style.display = "none";
      }
    };

    const validateInput = (input, message) => {
      if (input.value.trim() === "") {
        showError(input, message);
        return false;
      } else {
        clearError(input);
        return true;
      }
    };

    form.addEventListener("submit", function (event) {
      let isValid = true;

      if (!validateInput(addressTypeInput, "Address Type is required"))
        isValid = false;
      if (!validateInput(nameInput, "Name is required")) isValid = false;
      if (!validateInput(cityInput, "City is required")) isValid = false;
      if (!validateInput(stateInput, "State is required")) isValid = false;
      if (!validateInput(pincodeInput, "Pin Code is required")) isValid = false;
      if (!validateInput(phoneInput, "Phone number is required"))
        isValid = false;

      if (!isValid) {
        event.preventDefault();
      }
    });
  });
</script>
