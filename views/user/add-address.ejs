<%-include("../../views/partials/user/header") %>
<style>
  body {
    font-family: "Arial", sans-serif;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    background-color: #f9f9f9;
  }
  .breadcrumb-option {
    background-color: #f3f2ee;
    padding: 40px 0;
  }

  .breadcrumb__text h4 {
    color: #111111;
    font-weight: 700;
    margin-bottom: 8px;
  }

  .breadcrumb__links a {
    font-size: 15px;
    color: #111111;
    margin-right: 18px;
    display: inline-block;
    position: relative;
  }

  .breadcrumb__links span {
    font-size: 15px;
    color: #b7b7b7;
    display: inline-block;
  }

  .breadcrumb__links a:after {
    position: absolute;
    right: -12px;
    top: 0;
    content: "/";
    color: #888888;
  }

  .account-section {
    padding: 40px 0;
    background-color: #fff;
  }

  .container {
    width: 80%;
    margin: 0 auto;
  }

  .account-wrapper {
    display: flex;
    justify-content: space-between;
  }

  .account-sidebar {
    width: 25%;
  }

  .account-sidebar ul {
    list-style: none;
    padding: 0;
    border: 1px solid #ddd;
    background-color: #f5f5f5;
  }

  .account-sidebar ul li a {
    display: block;
    padding: 15px 20px;
    color: #333;
    text-decoration: none;
    border-bottom: 1px solid #ddd;
  }

  .account-sidebar ul li a:hover {
    background-color: #f0f0f0;
    color: #000;
  }

  .account-sidebar .logout {
    color: red;
  }

  .account-content {
    width: 70%;
    margin: 20px;
  }

  .form-group {
    position: relative;
    margin-bottom: 20px;
  }

  .form-group label {
    display: block;
    margin-bottom: 5px;
  }

  .form-group input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ddd;
  }
  .error-message {
    color: red;
    font-size: 0.875em;
    position: absolute;
    bottom: -20px;
    left: 0;
  }

  .submit-btn {
    display: inline-block;
    padding: 10px 20px;
    background-color: #000;
    color: #fff;
    text-decoration: none;
    border: none;
    cursor: pointer;
  }
</style>
<section class="breadcrumb-option">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb__text">
          <h4>My Account</h4>
          <div class="breadcrumb__links">
            <a href="/">Home</a>
            <span>Add Address</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="account-section">
  <div class="container">
    <div class="account-wrapper">
      <aside class="account-sidebar">
        <ul>
          <li><a href="/profile">Account Details</a></li>
          <li><a href="/orders">My Orders</a></li>
          <li><a href="/addresses">My Addresses</a></li>
          <li><a href="/change-password">Change Password</a></li>
          <li><a href="/wallet">Wallet</a></li>
          <li><a href="/logout" class="logout">Log Out</a></li>
        </ul>
      </aside>

      <div class="account-content">
        <h2>Add New Address</h2>

        <form id="addressForm" action="/address/add" method="POST">
          <div class="form-group">
            <label for="addressType">Address Type (e.g. Home, Work):</label>
            <input type="text" id="addressType" name="addressType" />
            <div class="error-message" id="addressTypeError"></div>
          </div>
          <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" />
            <div class="error-message" id="nameError"></div>
          </div>
          <div class="form-group">
            <label for="city">City:</label>
            <input type="text" id="city" name="city" />
            <div class="error-message" id="cityError"></div>
          </div>
          <div class="form-group">
            <label for="state">State:</label>
            <input type="text" id="state" name="state" />
            <div class="error-message" id="stateError"></div>
          </div>
          <div class="form-group">
            <label for="pincode">Pin Code:</label>
            <input type="text" id="pincode" name="pincode" />
            <div class="error-message" id="pincodeError"></div>
          </div>
          <div class="form-group">
            <label for="phone">Phone Number:</label>
            <input type="text" id="phone" name="phone" />
            <div class="error-message" id="phoneError"></div>
          </div>
          <div class="form-group">
            <button type="submit" class="submit-btn">Add Address</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<%-include("../../views/partials/user/footer") %>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const form = document.getElementById("addressForm");
    const addressTypeInput = document.getElementById("addressType");
    const nameInput = document.getElementById("name");
    const cityInput = document.getElementById("city");
    const stateInput = document.getElementById("state");
    const pincodeInput = document.getElementById("pincode");
    const phoneInput = document.getElementById("phone");

    const showError = (input, message) => {
      const errorElement = document.getElementById(`${input.id}Error`);
      errorElement.innerText = message;
    };

    const clearError = (input) => {
      const errorElement = document.getElementById(`${input.id}Error`);
      errorElement.innerText = "";
    };

    const validateInput = (input, message) => {
      if (input.value.trim() === "") {
        showError(input, message);
        return false;
      } else {
        clearError(input);
        return true;
      }
    };

    form.addEventListener("submit", function (event) {
      let isValid = true;

      if (!validateInput(addressTypeInput, "Address Type is required"))
        isValid = false;
      if (!validateInput(nameInput, "Name is required")) isValid = false;
      if (!validateInput(cityInput, "City is required")) isValid = false;
      if (!validateInput(stateInput, "State is required")) isValid = false;
      if (!validateInput(pincodeInput, "Pin Code is required")) isValid = false;
      if (!validateInput(phoneInput, "Phone number is required"))
        isValid = false;

      if (!isValid) {
        event.preventDefault();
      }
    });
  });
</script>
