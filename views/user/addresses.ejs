<%-include("../../views/partials/user/header") %>
<style>
  body {
    font-family: "Arial", sans-serif;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    background-color: #f9f9f9;
  }

  .account-section {
    padding: 40px 0;
    background-color: #fff;
  }

  .container {
    width: 80%;
    margin: 0 auto;
  }

  .account-wrapper {
    display: flex;
    justify-content: space-between;
  }

  .account-sidebar {
    width: 25%;
  }

  .account-sidebar ul {
    list-style: none;
    padding: 0;
    border: 1px solid #ddd;
    background-color: #f5f5f5;
  }

  .account-sidebar ul li a {
    display: block;
    padding: 15px 20px;
    color: #333;
    text-decoration: none;
    border-bottom: 1px solid #ddd;
  }

  .account-sidebar ul li a:hover {
    background-color: #f0f0f0;
    color: #000;
  }

  .account-sidebar .logout {
    color: red;
  }

  .account-content {
    margin: 20px;
  }
  .address-list {
    margin: 20px 0;
  }
  .address-item {
    border: 1px solid #ccc;
    padding: 10px;
    margin-bottom: 10px;
  }
  .address-actions {
    margin-top: 10px;
  }
  .address-actions a {
    margin-right: 10px;
  }
  .add-address-btn {
    display: inline-block;
    padding: 10px 20px;
    background-color: #000;
    color: #fff;
    text-decoration: none;
  }
  .delete-btn {
    background-color: #f44336;
    color: white;
    border: none;
    padding: 5px 10px;
  }
</style>

<section class="account-section">
  <div class="container">
    <div class="account-wrapper">
      <aside class="account-sidebar">
        <ul>
          <li><a href="/profile">Account Details</a></li>
          <li><a href="/orders">My Orders</a></li>
          <li><a href="/addresses">My Addresses</a></li>
          <li><a href="/change-password">Change Password</a></li>
          <li><a href="/wallet">Wallet</a></li>
          <li><a href="/logout" class="logout">Log Out</a></li>
        </ul>
      </aside>

      <div class="account-content">
        <h2>My Addresses</h2>

        <div class="address-list">
          <% if (addresses.length > 0) { %> <% addresses.forEach(address => { %>
          <div class="address-item">
            <p>
              <%= address.street %>, <%= address.city %>, <%= address.pincode %>
            </p>
            <p><%= address.country %></p>
            <div class="address-actions">
              <a href="/address/edit/<%= address._id %>">Edit</a>
              <form action="/address/delete/<%= address._id %>" method="POST">
                <button type="submit" class="delete-btn">Delete</button>
              </form>
            </div>
          </div>
          <% }) %> <% } else { %>
          <p>No addresses found.</p>
          <% } %>
        </div>
        <div class="form-group">
          <a href="/address/add" class="add-address-btn">Add New Address</a>
        </div>
      </div>
    </div>
  </div>
</section>

<%-include("../../views/partials/user/footer") %>
