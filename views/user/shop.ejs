<script>
  function filterStock(showInStock) {
  const urlParams = new URLSearchParams(window.location.search);
  if (showInStock) {
    urlParams.set('stock', 'in-stock');
  } else {
    urlParams.delete('stock');
  }
  window.location.search = urlParams.toString();
}
 
</script>
