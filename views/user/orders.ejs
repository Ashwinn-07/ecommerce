<%-include("../../views/partials/user/header") %>
<style>
  body {
    font-family: "Arial", sans-serif;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    background-color: #f9f9f9;
  }

  .breadcrumb-option {
    background-color: #f3f2ee;
    padding: 20px 0;
  }

  .breadcrumb__text h4 {
    color: #111111;
    font-weight: 700;
    margin-bottom: 8px;
    font-size: 24px;
  }

  .breadcrumb__links a {
    font-size: 14px;
    color: #111111;
    margin-right: 18px;
    display: inline-block;
    position: relative;
  }

  .breadcrumb__links span {
    font-size: 14px;
    color: #b7b7b7;
    display: inline-block;
  }

  .breadcrumb__links a:after {
    position: absolute;
    right: -12px;
    top: 0;
    content: "/";
    color: #888888;
  }

  .account-section {
    padding: 20px 0;
    background-color: #fff;
  }

  .container {
    width: 95%;
    margin: 0 auto;
  }

  .account-wrapper {
    display: flex;
    flex-direction: column;
  }

  .account-sidebar {
    width: 100%;
    margin-bottom: 20px;
  }

  .account-sidebar ul {
    list-style: none;
    padding: 0;
    border: 1px solid #ddd;
    background-color: #f5f5f5;
  }

  .account-sidebar ul li a {
    display: block;
    padding: 12px 15px;
    color: #333;
    text-decoration: none;
    border-bottom: 1px solid #ddd;
    font-size: 14px;
  }

  .account-sidebar ul li a:hover {
    background-color: #f0f0f0;
    color: #000;
  }

  .account-sidebar .logout {
    color: red;
  }

  .account-content {
    width: 100%;
  }

  .account-content h2 {
    font-size: 24px;
    margin-bottom: 15px;
  }

  .profile-form .form-group {
    margin-bottom: 15px;
  }

  .profile-form label {
    font-size: 14px;
    color: #333;
    margin-bottom: 5px;
    display: block;
  }

  .profile-form input {
    width: 100%;
    padding: 8px;
    font-size: 14px;
    border: 1px solid #ddd;
    border-radius: 5px;
    box-sizing: border-box;
  }

  .profile-form button {
    padding: 8px 12px;
    background-color: #333;
    color: #fff;
    border: none;
    cursor: pointer;
    font-size: 14px;
    border-radius: 5px;
    margin-top: 10px;
  }

  .profile-form button:hover {
    background-color: #555;
  }

  .order-list {
    list-style: none;
    padding: 0;
  }

  .order-item {
    border: 1px solid #ddd;
    margin-bottom: 15px;
    padding: 12px;
    background-color: #fff;
  }

  .order-header {
    display: flex;
    flex-direction: column;
    margin-bottom: 10px;
  }

  .order-details {
    margin-bottom: 12px;
  }

  .product-list {
    list-style: none;
    padding: 0;
  }

  .product-item {
    display: flex;
    justify-content: space-between;
    margin-bottom: 5px;
    font-size: 14px;
  }

  .cancel-btn,
  .return-btn {
    background-color: #ff4136;
    color: white;
    border: none;
    padding: 5px 10px;
    cursor: pointer;
    font-size: 14px;
    margin-top: 10px;
  }

  .cancel-btn:hover {
    background-color: #ff1a1a;
  }

  .return-btn {
    background-color: #ff851b;
  }

  .return-btn:hover {
    background-color: #ff6600;
  }

  .pagination-container {
    text-align: center;
    margin-top: 20px;
  }

  .order-details p {
    margin-bottom: 5px;
    font-size: 14px;
  }

  .payment-method {
    font-weight: bold;
    color: #4a4a4a;
  }

  .payment-method-cod {
    color: #2ecc71;
  }

  .payment-method-paypal {
    color: #3498db;
  }

  @media (min-width: 768px) {
    .container {
      width: 90%;
    }

    .account-wrapper {
      flex-direction: row;
      justify-content: space-between;
    }

    .account-sidebar {
      width: 30%;
      margin-bottom: 0;
    }

    .account-content {
      width: 65%;
    }

    .breadcrumb__text h4 {
      font-size: 28px;
    }

    .account-content h2 {
      font-size: 26px;
    }

    .order-header {
      flex-direction: row;
      justify-content: space-between;
    }
  }

  @media (min-width: 1024px) {
    .container {
      width: 80%;
    }

    .account-sidebar {
      width: 25%;
    }

    .account-content {
      width: 70%;
    }

    .breadcrumb__text h4 {
      font-size: 32px;
    }

    .account-content h2 {
      font-size: 28px;
    }

    .profile-form label,
    .profile-form input,
    .profile-form button,
    .order-item,
    .product-item,
    .cancel-btn,
    .return-btn,
    .order-details p {
      font-size: 16px;
    }
  }
</style>
<section class="breadcrumb-option">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb__text">
          <h4>My Account</h4>
          <div class="breadcrumb__links">
            <a href="/">Home</a>
            <span>My Orders</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="account-section">
  <div class="container">
    <div class="account-wrapper">
      <aside class="account-sidebar">
        <ul>
          <li><a href="/profile">Account Details</a></li>
          <li><a href="/orders">My Orders</a></li>
          <li><a href="addresses/">My Addresses</a></li>
          <li><a href="/change-password">Change Password</a></li>
          <li><a href="/wallet">Wallet</a></li>
          <li><a href="/logout" class="logout">Log Out</a></li>
        </ul>
      </aside>

      <div class="account-content">
        <h2>My Orders</h2>
        <% if (orders && orders.length > 0) { %>
        <ul class="order-list">
          <% orders.forEach(order => { %>
          <li class="order-item">
            <div class="order-header">
              <span>Order #<%= order._id %></span>
              <span>Date: <%= order.createdOn.toLocaleDateString() %></span>
            </div>
            <div class="order-details">
              <p>Status: <%= order.status %></p>
              <p>Total: $<%= order.finalAmount.toFixed(2) %></p>
              <p>
                Payment Method:
                <span
                  class="payment-method payment-method-<%= order.paymentMethod.toLowerCase() %>"
                  ><%= order.paymentMethod %></span
                >
              </p>
              <h4>Products:</h4>
              <ul class="product-list">
                <% order.orderedItems.forEach(item => { %>
                <li class="product-item">
                  <span
                    ><%= item.product.productName %> x <%= item.quantity
                    %></span
                  >
                  <span>$<%= item.price.toFixed(2) %></span>
                </li>
                <% }) %>
              </ul>
            </div>
            <% if (order.status === 'Delivered') { %>
            <button
              class="return-btn"
              onclick="showReturnForm('<%= order._id %>')"
            >
              Return Order
            </button>
            <div id="returnForm-<%= order._id %>" style="display: none">
              <form action="/orders/<%= order._id %>/return" method="POST">
                <textarea
                  name="returnReason"
                  rows="3"
                  placeholder="Please provide a reason for return"
                  required
                ></textarea>
                <button type="submit" class="return-btn">
                  Submit Return Request
                </button>
              </form>
            </div>
            <% } else if (order.status !== 'Cancelled' && order.status !==
            'Returned') { %>
            <form action="/orders/<%= order._id %>/cancel" method="POST">
              <button type="submit" class="cancel-btn">Cancel Order</button>
            </form>
            <% } %> <% if (order.status === 'Payment Pending') { %>
            <form action="/continue-payment/<%= order._id %>" method="POST">
              <button type="submit" class="btn btn-warning">
                Continue Payment
              </button>
            </form>
            <% } %>
            <a
              href="/download-invoice/<%= order._id %>"
              class="btn btn-primary"
            >
              Download Invoice
            </a>
          </li>
          <% }) %>
        </ul>
        <% } else { %>
        <p>You haven't placed any orders yet</p>
        <% } %>
      </div>
    </div>
  </div>
  <div class="pagination-container">
    <% if (currentPage > 1) { %>
    <a href="?page=<%= currentPage - 1 %>">&laquo; Previous</a>
    <% } %> <% for (let i = 1; i <= totalPages; i++) { %> <% if (i ===
    currentPage) { %>
    <span class="current-page"><%= i %></span>
    <% } else { %>
    <a href="?page=<%= i %>"><%= i %></a>
    <% } %> <% } %> <% if (currentPage < totalPages) { %>
    <a href="?page=<%= currentPage + 1 %>">Next &raquo;</a>
    <% } %>
  </div>
</section>
<%-include("../../views/partials/user/footer") %>

<script>
  function showReturnForm(orderId) {
    const form = document.getElementById(`returnForm-${orderId}`);
    form.style.display = form.style.display === "none" ? "block" : "none";
  }
</script>
