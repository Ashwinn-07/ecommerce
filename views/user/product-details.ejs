<%- include("../../views/partials/user/header") %>
<!-- Header Section End -->
<style>
  #imageZoom {
    width: 100%;
    max-width: 550px;
    height: 700px;
    border: 5px solid red;
    position: relative;
    overflow: hidden;
    margin: 0 auto;
  }
  #imageZoom img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: 0 0;
  }
  #imageZoom::after {
    display: var(--display, none);
    content: "";
    width: 100%;
    height: 100%;
    background-color: black;
    background-image: var(--url);
    background-size: 200%;
    background-position: var(--zoom-x, 0%) var(--zoom-y, 0%);
    position: absolute;
    left: 0;
    top: 0;
    pointer-events: none;
  }
  .out-of-stock {
    font-size: 2rem;
    font-weight: bold;
    color: #ff0000;
    padding: 0.5rem;
    border-radius: 5px;
    text-align: center;
  }

  #tabs-6 {
    padding: 20px;
  }

  .product__details__tab__content__item {
    border: 1px solid #eee;
    padding: 20px;
    margin-bottom: 15px;
    border-radius: 5px;
    background-color: #f8f9fa;
  }

  .product__details__tab__content__item h5 {
    margin-bottom: 5px;
    font-weight: bold;
  }

  .product__details__tab__content__item .rating {
    color: #fcb900;
    margin-bottom: 10px;
  }

  .product__details__tab__content__item p {
    margin-bottom: 10px;
  }

  .product__details__tab__content__item small {
    font-size: 0.8rem;
    color: #6c757d;
  }

  .review-form {
    margin-top: 30px;
  }

  .review-form .form-group {
    margin-bottom: 15px;
  }

  .review-form label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
  }

  .review-form select,
  .review-form textarea {
    width: 100%;
    padding: 10px;
    border: 1px solid #ced4da;
    border-radius: 4px;
    resize: vertical;
  }

  .review-form textarea {
    min-height: 120px;
  }

  .review-form button[type="submit"] {
    background-color: #007bff;
    color: #fff;
    border: none;
    padding: 10px 20px;
    border-radius: 4px;
    cursor: pointer;
  }

  .review-form button[type="submit"]:hover {
    background-color: #0056b3;
  }
  button[disabled] {
  opacity: 0.5;
  cursor: not-allowed;
}

  
  @media (max-width: 1200px) {
    #imageZoom {
      height: 600px;
    }
  }

  @media (max-width: 992px) {
    #imageZoom {
      height: 500px;
    }
    .product__details__text {
      margin-top: 30px;
    }
  }

  @media (max-width: 768px) {
    #imageZoom {
      height: 400px;
    }
    .product__details__breadcrumb {
      text-align: center;
    }
    .product__details__pic .col-lg-3 {
      order: 2;
    }
    .product__details__pic .col-lg-6 {
      order: 1;
    }
    .nav-tabs {
      display: flex;
      flex-wrap: nowrap;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
    }
    .nav-tabs .nav-item {
      flex: 0 0 auto;
    }
  }

  @media (max-width: 576px) {
    #imageZoom {
      height: 300px;
    }
    .product__details__text h4 {
      font-size: 1.5rem;
    }
    .product__details__text h3 {
      font-size: 1.8rem;
    }
    .product__details__option {
      flex-direction: column;
    }
    .product__details__option > * {
      margin-bottom: 15px;
    }
  }
</style>

<!-- Shop Details Section Begin -->
<section class="shop-details">
  <div class="product__details__pic">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="product__details__breadcrumb">
            <a href="/">Home</a>
            <a href="/">Shop</a>
            <span>Product Details</span>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-3 col-md-3">
          <ul class="nav nav-tabs" role="tablist">
            <% product.productImage.forEach((image, index) => { %>
            <li class="nav-item">
              <a
                class="nav-link <%= index === 0 ? 'active' : '' %>"
                data-toggle="tab"
                href="#tabs-<%= index + 1 %>"
                role="tab"
              >
                <div class="product__thumb__pic set-bg">
                  <img
                    src="/uploads/re-image/<%= image %>"
                    alt="<%= product.productName %>"
                  />
                </div>
              </a>
            </li>
            <% }); %>
          </ul>
        </div>
        <div class="col-lg-6 col-md-9">
          <div class="tab-content">
            <% product.productImage.forEach((image, index) => { %>
            <div
              class="tab-pane <%= index === 0 ? 'active' : '' %>"
              id="tabs-<%= index + 1 %>"
              role="tabpanel"
            >
              <div
                id="imageZoom"
                class="product__details__pic__item"
                style="
                  --url: url(/uploads/re-image/<%= image %>);
                  --zoom-x: 0%;
                  --zoom-y: 0%;
                  --display: none;
                "
              >
                <img
                  src="/uploads/re-image/<%= image %>"
                  alt="<%= product.productName %>"
                />
              </div>
            </div>
            <% }); %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="product__details__content">
    <div class="container">
      <div class="row d-flex justify-content-center">
        <div class="col-lg-8">
          <div class="product__details__text">
            <h4><%= product.productName %></h4>
            <div class="rating">
              <% for (let i = 0; i < 5; i++) { %>
              <i
                class="fa <%= i < Math.round(product.averageRating) ? 'fa-star' : 'fa-star-o' %>"
              ></i>
              <% } %>
              <span> - <%= product.reviews.length %> Reviews</span>
            </div>
            <h3>
              $<%= product.salePrice %>
              <span><del>$<%= product.regularPrice %></del></span>
            </h3>
            <% if (product.quantity === 0) { %> Out of Stock <% } else{%> In
            Stock:<%= product.quantity %> <% } %>
            <p><%= product.description %></p>

            <form id="add-to-cart-form" action="/add-to-cart" method="POST">
              <input
                type="hidden"
                name="productId"
                value="<%= product._id %>"
              />
              <div class="product__details__cart__option">
                <div class="quantity">
                  <div class="pro-qty">
                    <input type="number" name="quantity" value="1" min="1" />
                  </div>
                </div>
                <button
      type="submit"
      class="primary-btn"
      <%= product.quantity === 0 ? 'disabled' : '' %>
    >
      <%= product.quantity === 0 ? 'Out of Stock' : 'Add to Cart' %>
    </button>
              </div>
            </form>

            <div class="product__details__btns__option">
              <form
                action="/wishlist/add/<%= product._id %>"
                method="POST"
                style="display: inline"
              >
                <button
                  type="submit"
                  style="
                    background: none;
                    border: none;
                    cursor: pointer;
                    padding: 0;
                  "
                >
                  <i class="fa fa-heart"></i> add to wishlist
                </button>
              </form>
            </div>
            <div class="product__details__last__option">
              <h5><span>Guaranteed Safe Checkout</span></h5>
              <img src="/img/shop-details/details-payment.png" alt="" />
              <ul>
                <li><span>SKU:</span> <%= product._id %></li>
                <li><span>Categories:</span> <%= product.category.name %></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <div class="product__details__tab">
            <ul class="nav nav-tabs" role="tablist">
              <li class="nav-item">
                <a
                  class="nav-link active"
                  data-toggle="tab"
                  href="#tabs-5"
                  role="tab"
                  >Description</a
                >
              </li>
              <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#tabs-6" role="tab">
                  Customer Reviews(<%= product.reviews.length %>)
                </a>
              </li>
            </ul>
            <div class="tab-content">
              <div class="tab-pane active" id="tabs-5" role="tabpanel">
                <div class="product__details__tab__content">
                  <p class="note"><%= product.description %></p>
                </div>
              </div>
              <div class="tab-pane" id="tabs-6" role="tabpanel">
                <div class="product__details__tab__content">
                  <% if (product.reviews.length > 0) { %> <%
                  product.reviews.forEach(review => { %>
                  <div class="product__details__tab__content__item">
                    <h5><%= review.user.username %></h5>
                    <div class="rating">
                      <% for (let i = 0; i < 5; i++) { %>
                      <i
                        class="fa <%= i < review.rating ? 'fa-star' : 'fa-star-o' %>"
                      ></i>
                      <% } %>
                    </div>
                    <p><%= review.comment %></p>
                    <small
                      ><%= new Date(review.createdAt).toLocaleDateString()
                      %></small
                    >
                  </div>
                  <% }); %> <% } else { %>
                  <p>No reviews yet. Be the first to review this product!</p>
                  <% } %>

                  <form
                    action="/product/review"
                    method="POST"
                    class="review-form"
                  >
                    <input
                      type="hidden"
                      name="productId"
                      value="<%= product._id %>"
                    />
                    <div class="form-group">
                      <label for="rating">Rating:</label>
                      <select name="rating" id="rating" required>
                        <option value="5">5 stars</option>
                        <option value="4">4 stars</option>
                        <option value="3">3 stars</option>
                        <option value="2">2 stars</option>
                        <option value="1">1 star</option>
                      </select>
                    </div>
                    <div class="form-group">
                      <label for="comment">Your Review:</label>
                      <textarea
                        name="comment"
                        id="comment"
                        rows="4"
                        required
                      ></textarea>
                    </div>
                    <button type="submit" class="site-btn">
                      Submit Review
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Shop Details Section End -->

<section class="related spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h3 class="related-title">Related Product</h3>
      </div>
    </div>
    <div class="row">
      <% relatedProducts.forEach(relatedProduct=> {%>
      <div class="col-lg-3 col-md-6 col-sm-6 col-sm-6">
        <div class="product__item">
          <div
            class="product__item__pic set-bg"
            data-setbg="/uploads/re-image/<%= relatedProduct.productImage[0]  %>"
          >
            <ul class="product__hover">
              <li>
                <a href="#"><img src="/img/icon/heart.png" alt="" /></a>
              </li>

              <li>
                <a href="#"><img src="/img/icon/search.png" alt="" /></a>
              </li>
            </ul>
          </div>
          <div class="product__item__text">
            <h6>
              <a href="/product/<%= relatedProduct._id  %>"
                ><%= relatedProduct.productName %></a
              >
            </h6>
            <div class="rating">
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
            </div>
            <div class="product__price">
              $<%= product.salePrice.toFixed(2) %> <% if (product.salePrice <
              product.regularPrice) { %>
              <span><del>$<%= product.regularPrice.toFixed(2) %></del></span>
              <% } %>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</section>
<!-- Related Product Section End -->

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    function activateImageZoom() {
      const activeTabPane = document.querySelector(".tab-pane.active");
      const imageZoom = activeTabPane.querySelector("#imageZoom");

      if (imageZoom) {
        imageZoom.addEventListener("mousemove", (event) => {
          let pointer = {
            x: (event.offsetX * 100) / imageZoom.offsetWidth,
            y: (event.offsetY * 100) / imageZoom.offsetHeight,
          };
          imageZoom.style.setProperty("--zoom-x", pointer.x + "%");
          imageZoom.style.setProperty("--zoom-y", pointer.y + "%");
          imageZoom.style.setProperty("--display", "block");
        });

        imageZoom.addEventListener("mouseout", () => {
          imageZoom.style.setProperty("--display", "none");
        });
      }
    }

    activateImageZoom();

    document.querySelectorAll(".nav-link").forEach((link) => {
      link.addEventListener("click", () => {
        setTimeout(() => {
          activateImageZoom();
        }, 100);
      });
    });
  });

  document.addEventListener('DOMContentLoaded', function() {
  const urlParams = new URLSearchParams(window.location.search);
  const wishlistStatus = urlParams.get('wishlist');

  if (wishlistStatus === 'added') {
    Swal.fire({
      title: 'Success!',
      text: 'Product added to your wishlist.',
      icon: 'success',
      confirmButtonText: 'OK'
    });
  } else if (wishlistStatus === 'exists') {
    Swal.fire({
      title: 'Already in Wishlist',
      text: 'This product is already in your wishlist.',
      icon: 'info',
      confirmButtonText: 'OK'
    });
  } else if (wishlistStatus === 'error') {
    Swal.fire({
      title: 'Oops...',
      text: 'There was an error adding the product to your wishlist. Please try again.',
      icon: 'error',
      confirmButtonText: 'OK'
    });
  }
});
document.addEventListener("DOMContentLoaded", function () {
    const urlParams = new URLSearchParams(window.location.search);
    const action = urlParams.get("action");
    const result = urlParams.get("result");
    const message = urlParams.get("message");

    if (action === "addtocart") {
      switch (result) {
        case "success":
          Swal.fire({
            title: "Added to Cart!",
            text: "Item has been added to your cart.",
            icon: "success",
            confirmButtonText: "OK",
          });
          break;
        case "updated":
          Swal.fire({
            title: "Cart Updated!",
            text: "This item was already in your cart. We've updated the quantity.",
            icon: "info",
            confirmButtonText: "OK",
          });
          break;
        case "error":
          Swal.fire({
            title: "Oops...",
            text:
              message ||
              "There was an error adding the item to your cart. Please try again.",
            icon: "error",
            confirmButtonText: "OK",
          });
          break;
      }
    }
  });
</script>

